<body>

  <h2>Concrete Material Calculator</h2>

  <select id="grade" class="input-box">
    <option value="M5">M5 (1 : 5 : 10)</option>
    <option value="M7.5">M7.5 (1 : 4 : 8)</option>
    <option value="M10">M10 (1 : 3 : 6)</option>
    <option value="M15">M15 (1 : 2 : 4)</option>
    <option value="M20">M20 (1 : 1.5 : 3)</option>
    <option value="M25">M25 (1 : 1 : 2)</option>
    <option value="M30">M30 (1 : 0.75 : 1.5)</option>
    <option value="M35">M35 (1 : 0.5 : 1)</option>
    <option value="M40">M40 (1 : 0.25 : 0.5)</option>
  </select>

  <input type="number" id="volume" class="input-box" step="0.01" placeholder="Enter volume in m続" />

  <button class="btn" onclick="calculate()">Calculate</button>

  <div id="result"></div>

  <script>
    function calculate() {
      let grade = document.getElementById("grade").value;
      let volume = parseFloat(document.getElementById("volume").value);

      if (!volume || volume <= 0) {
        alert("Enter a valid volume");
        return;
      }

      let ratio = {cement: 0, sand: 0, agg: 0};
      if (grade === "M5") ratio = {cement: 1, sand: 5, agg: 10};
      if (grade === "M7.5") ratio = {cement: 1, sand: 4, agg: 8};
      if (grade === "M10") ratio = {cement: 1, sand: 3, agg: 6};
      if (grade === "M15") ratio = {cement: 1, sand: 2, agg: 4};
      if (grade === "M20") ratio = {cement: 1, sand: 1.5, agg: 3};
      if (grade === "M25") ratio = {cement: 1, sand: 1, agg: 2};
      if (grade === "M30") ratio = {cement: 1, sand: 0.75, agg: 1.5};
      if (grade === "M35") ratio = {cement: 1, sand: 0.5, agg: 1};
      if (grade === "M40") ratio = {cement: 1, sand: 0.25, agg: 0.5};

      let totalParts = ratio.cement + ratio.sand + ratio.agg;

      let cementVolume = (ratio.cement / totalParts) * volume;
      let cementWeight = cementVolume * 1440; // kg
      let cementBags = cementWeight / 50;

      let sandVolume = (ratio.sand / totalParts) * volume;
      let sandBrass = sandVolume / 2.83;

      let aggVolume = (ratio.agg / totalParts) * volume;
      let aggBrass = aggVolume / 2.83;

      document.getElementById("result").innerHTML =
        `<b>Cement:</b> ${cementWeight.toFixed(2)} kg (${cementBags.toFixed(2)} bags of 50 kg)<br>
         <b>Sand:</b> ${sandVolume.toFixed(3)} m続 (${sandBrass.toFixed(3)} brass)<br>
         <b>Aggregate:</b> ${aggVolume.toFixed(3)} m続 (${aggBrass.toFixed(3)} brass)<br>
         <small>Note: 1 brass = 2.83 m続</small>`;
    }
  </script>

</body>
